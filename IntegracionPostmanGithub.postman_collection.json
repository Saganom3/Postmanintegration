							"];",
							"",
							"// Ingrese rama en la cual se ejecutara",
							"const refValue = pm.variables.get(\"ref\") || \"dev\"; // Ref predeterminado",
							"// Ingrese el numero del flujo a ejecutar",
							"const selectedIndex = parseInt(pm.variables.get(\"selectedIndex\")) || 3; ",
							"// Ingrese Correo al cual se le enviaran las evidencias correspondientes",
							"const userEmail = pm.variables.get(\"initialEmail\") || \"ing.saganome@gmail.com\"; ",
							"",
							"// Validación del índice",
							"if (selectedIndex < 1 || selectedIndex > options.length) {",
							"    throw new Error(`⚠️ Índice fuera de rango. Por favor selecciona un número entre 1 y ${options.length}.`);",
							"}",
							"",
							"// Extraer el nombre de la opción seleccionada",
							"const selectedName = options[selectedIndex - 1].split(\" - \")[1].trim(); // Obtiene solo el nombre",
							"",
							"// Configurar las variables dinámicamente",
							"pm.environment.set(\"ref\", refValue); // Ref configurado por el usuario o predeterminado",
							"pm.environment.set(\"name\", selectedName); // Nombre seleccionado",
							"pm.environment.set(\"email\", userEmail); // Correo proporcionado o predeterminado",
							"",
